  exposed-modules: Cauterize.Generators.GHC7.Synchronous.Common,
                   Cauterize.Generators.GHC7.Synchronous.HSFile,
                   Cauterize.Generators.GHC7.Synchronous.HSMetaFile,
                   Cauterize.Generators.GHC7.Synchronous.Special,
                   Cauterize.Generators.GHC7.Synchronous.TestServer,
                   Cauterize.Generators.GHC7.Synchronous.Functions,
                   Cauterize.Generators.GHC7.Synchronous.TypeDecl,
                   Cauterize.Generators.GHC7.Synchronous.TypePack,
                   Cauterize.Generators.GHC7.Synchronous.TypeSize,

                   -- A module used by the generated code.
                   Cauterize.Generators.GHC7.SynchronousSupport

executable caut-ghc7-sync-gen
  hs-source-dirs:      gen/
  ghc-options:         -Wall -O2
  main-is:             Main.hs
  build-depends:       base >=4.6 && <4.8,
                       caut-ghc7-sync,
                       cauterize <=0.1.0.0,
                       directory,
                       text,
                       filepath,
                       optparse-applicative >= 0.11.0.1
  default-language:    Haskell2010

