  ghc-options:         -Wall
  build-depends:       base >=4.6 && <4.8,
                       split,
                       directory,
                       filepath,
                       wl-pprint-text,
                       text,
                       containers,
                       bytes,
                       cereal,
                       bytestring,
                       transformers-compat >=0.3.3.4,
                       transformers,
                       bytes >=0.14.1,
                       bytestring,
                       cereal,
                       mtl,
                       cauterize <=0.1.0.0
